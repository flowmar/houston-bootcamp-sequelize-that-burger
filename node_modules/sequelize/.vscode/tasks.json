  "version": "0.1.0",
  "command": "npm",
  "args": [
    "--silent",
    "run"
  ],
  "isShellCommand": true,
  "showOutput": "always",
  "tasks": [
    {
      "taskName": "lint",
      "problemMatcher": "$eslint-stylish",
      "isTestCommand": true
    }
  ]
}
